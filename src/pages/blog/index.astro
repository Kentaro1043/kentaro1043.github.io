---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { Image } from "astro:assets";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-3xl">
      <section>
        <ul class="m-0 flex list-none flex-wrap gap-8 p-0">
          {
            posts.map((post, idx) => (
              <li
                class={
                  idx === 0 ? "mb-4 w-full text-center" : "w-[calc(50%-1rem)]"
                }
              >
                <a
                  href={`/blog/${post.id}/`}
                  class="group block transition duration-200 ease-in-out"
                >
                  {post.data.heroImage && (
                    <Image
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                      class={
                        idx === 0
                          ? "mb-2 w-full rounded-xl group-hover:shadow-lg"
                          : "mb-2 rounded-xl group-hover:shadow-lg"
                      }
                    />
                  )}
                  <h4
                    class={
                      idx === 0
                        ? "title m-0 text-3xl leading-tight text-base-content group-hover:text-accent"
                        : "title text-base-contente m-0 text-xl leading-tight group-hover:text-accent"
                    }
                  >
                    {post.data.title}
                  </h4>
                  <p class="date text-base-context m-0 group-hover:text-accent">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
