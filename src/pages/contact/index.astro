---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import atcoderLogo from "../../public/atcoder.webp";
import SNSCard from "../../components/SNSCard.astro";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="flex flex-col gap-5">
    <h1 class="border-b-2 border-dashed border-primary pb-2 text-4xl">
      連絡先
    </h1>
    <p>メールまたはXのDMにお願いします。</p>
    <div class="flex flex-col items-start gap-6">
      <SNSCard
        href="mailto:contact@kentaro1043.com"
        class="bg-red-500 text-white"
        iconType="icon"
        iconProps={{
          name: "fa6-solid:envelope",
          width: 28,
          height: 28,
        }}
        text="contact@kentaro1043.com"
      />
      <SNSCard
        href="https://x.com/Kentaro1043"
        class="animate-float-up-delay-1 bg-[#0F1419] text-white"
        iconType="icon"
        iconProps={{
          name: "fa6-brands:x-twitter",
          width: 28,
          height: 28,
        }}
        text="@Kentaro1043"
      />
    </div>
  </section>
</BaseLayout>
