---
import { Icon } from "astro-icon/components";

type SNSName = "twitter" | "github";
const {
  name,
  href,
  width = 24,
  height = 24,
} = Astro.props as {
  name: SNSName;
  href: string;
  width?: number;
  height?: number;
};

const iconMap: Record<SNSName, string> = {
  twitter: "fa6-brands:x-twitter",
  github: "fa6-brands:github",
};

const iconName = iconMap[name];
---

{
  iconName && href && (
    <a
      href={href}
      aria-label={name + " link"}
      target="_blank"
      rel="noopener noreferrer"
    >
      <Icon name={iconName} width={width} height={height} />
    </a>
  )
}
